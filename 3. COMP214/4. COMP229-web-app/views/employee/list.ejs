<%- include('../partials/header.ejs') %>
<%- include('../partials/top_nav.ejs') %>
 
<main class="container">
    <br>
    <a href="/employees/add" class="btn btn-primary"><i class="fa-solid fa-plus fa-lg"></i> Add Employee</a>
    <br>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Address</th>
              <th scope="col">Contact Number</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            <% for (let index = 0; index < EmployeeList.length; index++) { %>
                <tr>
                    <td><%= EmployeeList[index].name %></td>
                    <td><%= EmployeeList[index].address %></td>
                    <td><%= EmployeeList[index].contactnumber %></td>
                    <td>
                      <a href="/employees/delete/<%= EmployeeList[index].id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?')"><i class="fa-solid fa-trash"></i> Delete</a>
                    </td>
                </tr>
            <% } %>
          </tbody>
    </table>
</main>

<%- include('../partials/bottom_nav.ejs') %>
<%- include('../partials/footer.ejs') %>