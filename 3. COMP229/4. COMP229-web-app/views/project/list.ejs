<%- include('../partials/header.ejs') %>
<%- include('../partials/top_nav.ejs') %>
 
<main class="container">
    <br>
    <a href="/projects/add" class="btn btn-primary"><i class="fa-solid fa-plus fa-lg"></i> Add Project</a>
    <br>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
              <th scope="col">Title</th>
              <th scope="col">Description</th>
              <th scope="col">Deadline</th>
              <th scope="col">Update</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            <% for (let index = 0; index < ProjectList.length; index++) { %>
                <tr>
                    <td><%= ProjectList[index].title %></td>
                    <td><%= ProjectList[index].description %></td>
                    <td><%= ProjectList[index].deadline %></td>
                    <td>
                      <a href="/projects/update/<%= ProjectList[index].id %>" class="btn btn-info btn-sm"><i class ="fa-solid fa-file-pen fa-lg"></i> Update</a>
                    </td>
                    <td>
                      <a href="/projects/delete/<%= ProjectList[index].id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?')"><i class="fa-solid fa-trash"></i> Delete</a>
                    </td>
                </tr>
            <% } %>
          </tbody>
    </table>
</main>

<%- include('../partials/bottom_nav.ejs') %>
<%- include('../partials/footer.ejs') %>